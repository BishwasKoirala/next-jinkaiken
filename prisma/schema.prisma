generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  studentId    String        @id @unique
  name         String?
  email        String?       @unique
  gakubu       String
  gakka        String
  phoneNum     String
  password     String?
  registeredAt DateTime      @default(now())
  bookRecords  bookRecords[] // one to many relation
}

model bookRecords {
  id            Int      @id @default(autoincrement())
  studentId     String
  name          User     @relation(fields: [studentId], references: [studentId])
  bookName      String?
  rentStatus    String?
  transactionAt DateTime @default(now())
  // ここに借りるか返すしかおくれないようにスキーマー設定したい。
}
