generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  studentId    String        @id @unique
  name         String?
  email        String?       @unique
  gakubu       String
  gakka        String
  phoneNum     String
  password     String?
  registeredAt DateTime      @default(now())
  bookRecords  BookRecords[] // one to many relation
}

model BookRecords {
  id            Int      @id @default(autoincrement())
  studentId     String
  bookName      String?
  rentStatus    String?
  transactionAt DateTime @default(now())
  user          User     @relation(fields: [studentId], references: [studentId])
}

model StoreBooks {
  columnId     Int   @id @default(autoincrement())
  isbn13       String   @unique
  id           String   @unique
  title        String
  authors       String
  // authors2      String    
  // aurhors3      String  
  registeredAt DateTime @default(now())
}
