generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  studentId    String        @id @unique
  name         String?
  email        String?       @unique
  gakubu       String
  gakka        String
  phoneNum     String
  password     String?
  isAdmin      Boolean       @default(false)
  registeredAt DateTime      @default(now())
  bookRecords  BookRecords[] // one to many relation
}

model StoreBooks {
  id           String        @id @unique
  isbn13       String?
  isbn10       String?
  title        String
  authors      String
  // authors2      String    
  // aurhors3      String  
  rentable     Boolean       @default(true)
  registeredAt DateTime      @default(now())
  bookRecords  BookRecords[]
}

model BookRecords {
  id           Int        @id @default(autoincrement())
  studentId    String
  bookId       String
  burrowDate   DateTime   @default(now())
  returned     Boolean    @default(false)
  returnedDate DateTime?  
  user         User       @relation(fields: [studentId], references: [studentId])
  storeBooks   StoreBooks @relation(fields: [bookId], references: [id])
}
